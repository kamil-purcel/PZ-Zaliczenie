@model System.Collections.Generic.List<WarehouseMVC.Application.ViewModels.Customer.AddressForListVm>

@{
    ViewBag.Title = "Addesses";
    Layout = "_Layout";
}
@if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
{
    <a asp-action="AddAddess">Add Address</a>
}
<div class="row">
    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Company name
            </th>
            <th>
                Address
            </th>
            <th>
                Zipcode
            </th>
            <th>
                City
            </th>
            <th>
                Country
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>